<!DOCTYPE configuration>
<configuration debug="true" scan="true" scanPeriod="30 seconds">
	<property name="LOG_PATH" value="E:/logs/test-stock" />
	<statusListener class="ch.qos.logback.core.status.NopStatusListener" />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<charset>UTF-8</charset>
			<Pattern>TH %d{HH:mm:ss} [%-5level] %-64.64logger{64} :%4line %msg%n</Pattern>
		</encoder>
	</appender>
	<appender name="general" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LOG_PATH}/general.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${LOG_PATH}/general.log.%i</fileNamePattern>
			<maxIndex>9</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>4MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %-64.64logger{64} :%4line %msg%n</Pattern>
		</encoder>
	</appender>
	<appender name="stock" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LOG_PATH}/stock.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${LOG_PATH}/stock.log.%i</fileNamePattern>
			<maxIndex>9</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>1MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %-32.32logger{32} :%4line %msg%n</Pattern>
		</encoder>
	</appender>

	<logger name="org.hibernate" additivity="false" level="warn">
		<appender-ref ref="console" />
		<appender-ref ref="general" />
	</logger>
	<logger name="org.openqa" additivity="false" level="error">
		<appender-ref ref="console" />
		<appender-ref ref="general" />
	</logger>
	<logger name="kr.andold.stock.antlr" additivity="false" level="info">
		<appender-ref ref="console" />
		<appender-ref ref="general" />
	</logger>
	<logger name="kr.andold.stock.crawler.ChromeDriverWrapper" additivity="false" level="debug">
		<appender-ref ref="general" />
	</logger>
	<logger name="kr.andold.stock.controller" additivity="false" level="info">
		<appender-ref ref="console" />
		<appender-ref ref="stock" />
	</logger>
	<logger name="kr.andold.stock.service" additivity="false" level="debug">
		<appender-ref ref="console" />
		<appender-ref ref="stock" />
	</logger>

	<logger name="kr.andold.stock" additivity="false" level="debug">
		<appender-ref ref="console" />
		<appender-ref ref="stock" />
	</logger>

	<logger name="org.springframework" additivity="false" level="warn">
		<appender-ref ref="console" />
		<appender-ref ref="general" />
	</logger>

	<root level="info">
		<appender-ref ref="console" />
		<appender-ref ref="general" />
	</root>

</configuration>
